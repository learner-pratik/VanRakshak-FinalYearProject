1. check Email registration
url - "/check"
request - {
	"email" : "<emailid>"
}
response - {
	"email" : "1,2,3" // 1 for email incorrect, 
			  //  2 for password already registered for email
			  //  3 for correct email address
}

2. save password
url - "/register"
request - {
	"email" : "<emailid>",
	"password" : "<password>"
}
response - {
	"status" : "true/false(boolean)"
}

3. login 
url - "/login"
request - {
	"email" : "<emailid>",
	"password" : "<password>"
}
response - {
	"email" : "true/false(boolean)"
	"password" : "true/false(boolean)"
	"password_registration" : "true/false(boolean)" // whether password is present in DB
	// if credentials are wrong then user will be null
	"user" : {
		"name" : "<officer_name>",
		"designation" : "<designation_name>",
		"beat" : "<beat_name>",
		"range" : "<range_name>",
		"division" : "<division_name>"
	} 
}

4. report
url - "/report"
request - {
	"email" : "<email_id>",
	"name" : "<report_name>",
	"type" : "<report_type>",
	"description" : "<report_description>",
	"latitude" : "<latitude>",
	"longitude" : "<longitude>",
}
response - {
	"status" : "true/false(boolean)"
}

5. taskreport
url - "/taskreport"
request - {
	"email" : "<email_id>",
	"taskID" : "<task_id>",
	"report" : "<task_report>",
	"latitude" : "<latitude>",
	"longitude" : "<longitude>",
}
response - {
	"status" : "true/false(boolean)"
}

6. alert 
url - "/alert"
request - {
	"alert" : "true"
}
response - {
	"response_type" : "alert",
	"action" : "<alert_type>",
	"timestamp" : "<alert_time>",
	"camera_id" : "<camera_id>",
	"latitude" : "<latitude>",
	"longitude" : "<longitude>",
}

7. task
response - {
	"response_type" : "task",
	"id" : "<task_id>"
	"name" : "<task_name>",
	"type" : "<task_type>",
	"description : "<task_description>",
	"assigning_offcier" : "<officer_name>",
	"deadline" : "<task_deadline_date>"
}

8. Camera Alert
url = "/camera-alert"
request - {
	"camera_id" : "<camera_id>",
	"type" : "<alert_type>" // hunter or animal, string
	"animal_type" : "<animal_name>",
	"latitude" : "<geo-latitude>",
	"longitude" : "<geo-longitude>",
	"timestamp" : "alert-time",
}
response - {
	"status" : "<true/false>" //boolean
}

9. SOS Alert
url - "/sos-alert"
request - {
	"type" : "<alert_type>",
	"name" : "<user_name>",
	"phone_number" : "<user_phone_number>",
	"address" : "user_address",
	"latitude" : "<geo-latitude>",
	"longitude" : "<geo-longitude>",
}
